<h2><%= @user.name %>'s Profile</h2>
<p><%= @user.bio %></p>
<hr>
<div class="container-fluid">
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4 pt-2">
			
    <% @user.playlists.each do |p| %>
			<div class="col-5">
				<div class="card card-block">
          <img src="<%= p.image_url %>" class="card-img-top" alt="">
          <div class="card-body">
            <h5><%= p.title %></h5>
            <p class="card-text"><small class="text-muted"><%= p.date %></small></p>
            <a href="<%= user_playlist_path(@user, p) %>" class="card-link">View Playlist</a>
          </div>
        </div>
			</div>
    <% end %>
    </div>
</div>

<%= render 'links' %>



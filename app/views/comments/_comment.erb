
<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
        <% unless !comment.persisted? %>
          <strong><%= comment.user.name %>:</strong>
          <%= comment.content %>
        </p>
      </div>
    </div>
    <% if can? :manage, comment %>
     <%= link_to 'Delete', [comment.playlist, comment], :method => :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %>
  </article>
   <% end %>
  <% end %>
</div>



<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.user.name unless !comment.user %>:</strong>
          <%= comment.content %>
        </p>
      </div>
    </div>
     <%= link_to 'Delete', [comment.playlist, comment], :method => :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %>
  </article>
</div>


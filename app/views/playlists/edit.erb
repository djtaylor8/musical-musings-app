<h1>Edit Playlist</h1>
<%= render 'errors' %>
<%= bootstrap_form_for(@playlist) do |f| %>
<%= f.text_field :title, label_as_placeholder: true %>
<br>
<%= f.text_area :story, label_as_placeholder: true %>
<br>
<%= f.text_field :image_url, placeholder: 'Add image', hide_label: true %>
<small><p class="text-muted" style="text-align: left;">copy and paste image address</p></small>
<br>
<br>
<div class="table-wrapper-scroll-y my-custom-scrollbar align-content-center">
<table class="table table-sm">
<%= render 'layouts/table' %>
<tbody>
<%= f.fields_for :songs do |ff| %>
<tr>
  <td><%= ff.text_field :name %></td>
  <td><%= ff.text_field :artist %></td>
  <td><%= ff.text_field :genre %></td>
  <td><%= ff.check_box :_destroy, hide_label: true %></td>
</td>
  <% end %>
</tr>
</tbody>
</table>
</div>
<%= f.submit "Save Playlist" %>
<% end %>
<%= link_to 'Back', url_for(:back) %>

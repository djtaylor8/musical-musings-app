<div class="d-flex justify-content-center">
<div class="card mb-3">
 <img src="<%= @playlist.image_url %>" alt="" style="max-height: 18rem;" >
  <div class="card-body">
    <h5 class="card-title"><%= @playlist.title %></h5>
    <p class="card-text"><%= @playlist.story %></p>
    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
  </div>
</div>
</div>



<div class="table-wrapper-scroll-y my-custom-scrollbar align-content-center">
<table class="table table-sm">
<thead>
<tr>
  <th scope="col">Song Name </th>
  <th scope="col">Artist</th>
  <th scope="col">Genre</th>
  <th scope="col">Preview</th>
</tr>
</thead>
<tbody>
<% @playlist.songs.each do |song| %>
<tr>
  <td><%= song.name %></td>
  <td><%= song.artist %></td>
  <td><%= song.genre %></td>
  <td><iframe src="https://open.spotify.com/embed/track/<%= song.spotify_id %>" width="100%" height="80" frameBorder="0" allowtransparency="true" allow="encrypted-media"></iframe>
</td>
</tr>
<% end %>
</tbody>
</table>
<% if can? :manage, @playlist %>
<%= link_to "Add Songs", new_search_path, style: 'color:#FFFFFF;' %>
<%= link_to "Edit Playlist", edit_user_playlist_path(@playlist), style: 'color:#FFFFFF;' %>
<%= link_to "Delete Playlist", playlist_path(@playlist), data: {method: :delete}, style: 'color:#FFFFFF;' %>
<% end %>
<%= link_to "Comments", playlist_comments_path(@playlist), style: 'color:#FFFFFF;' %>
<%= link_to 'Back', url_for(:back) %>
</div>


